-color: var(--button-hover);\r\n  transform: translateY(-1px);\r\n}\r\n\r\n/* Mobile-first responsive design */\r\n@media (max-width: 767px) {\r\n  .custom-table {\r\n    width: 100%;\r\n  }\r\n\r\n  .custom-table thead {\r\n    display: none;\r\n  }\r\n\r\n  .custom-table tr {\r\n    display: block;\r\n    margin-bottom: 1rem;\r\n    border: 1px solid var(--border-color);\r\n    border-radius: 8px;\r\n  }\r\n\r\n  .custom-table td {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    align-items: center;\r\n    text-align: right;\r\n    padding-left: 50%;\r\n    position: relative;\r\n    border-bottom: 1px solid var(--border-color);\r\n    border-right: 0;\r\n  }\r\n\r\n  .custom-table td:last-child {\r\n    border-bottom: 0;\r\n  }\r\n\r\n  .custom-table td::before {\r\n    content: attr(data-label);\r\n    position: absolute;\r\n    left: 1rem;\r\n    width: 45%;\r\n    padding-right: 1rem;\r\n    text-align: left;\r\n    font-weight: bold;\r\n    color: var(--primary-color);\r\n  }\r\n\r\n  .hide-mobile {\r\n    display: none;\r\n  }\r\n}\r\n\r\n/* Medium screens (tablets) */\r\n@media (min-width: 768px) and (max-width: 1023px) {\r\n  .custom-table th,\r\n  .custom-table td {\r\n    padding: 0.6rem;\r\n    font-size: 0.9rem;\r\n  }\r\n\r\n  .custom-table button {\r\n    padding: 0.4rem 0.8rem;\r\n    font-size: 0.8rem;\r\n  }\r\n}\r\n\r\n/* Large screens (desktops) */\r\n@media (min-width: 1024px) {\r\n  .table-container {\r\n    max-width: 1200px;\r\n  }\r\n\r\n  .custom-table {\r\n    font-size: 1rem;\r\n  }\r\n}\r\n\r\n/* Very small screens (mobile portrait) */\r\n@media (max-width: 480px) {\r\n  .custom-table td {\r\n    padding-left: 40%;\r\n  }\r\n\r\n  .custom-table td::before {\r\n    width: 35%;\r\n  }\r\n\r\n  .custom-table button {\r\n    padding: 0.3rem 0.6rem;\r\n    font-size: 0.7rem;\r\n  }\r\n}\r\n\r\n/* Print styles */\r\n@media print {\r\n  .Navbar, .Footer {\r\n    display: none;\r\n  }\r\n\r\n  .payroll {\r\n    padding: 0;\r\n  }\r\n\r\n  .custom-table {\r\n    width: 100%;\r\n    font-size: 12pt;\r\n  }\r\n\r\n  .custom-table th {\r\n    background-color: var(--primary-color) !important;\r\n    color: var(--white) !important;\r\n    -webkit-print-color-adjust: exact;\r\n    print-color-adjust: exact;\r\n  }\r\n\r\n  .custom-table button {\r\n    display: none;\r\n  }\r\n}\r\n</style>"],"mappings":";;EAEOA,KAAK,EAAC;AAAS;;EAIbA,KAAK,EAAC;AAAiB;;EACnBA,KAAK,EAAC;AAAc;;EAajB,YAAU,EAAC;AAAI;;EACf,YAAU,EAAC;AAAM;;EACjB,YAAU,EAAC;AAAO;;EAClB,YAAU,EAAC,OAAO;EAACA,KAAK,EAAC;;;EACzB,YAAU,EAAC;AAAQ;;EACnB,YAAU,EAAC;AAAS;;;;EAQHC,GAAG,EAAC;;;6DAhCnCC,YAAA,CAAUC,MAAA,aACVC,mBAAA,CAkCM,OAlCNC,UAkCM,G,0BAjCJD,mBAAA,CAAwC,aAApCA,mBAAA,CAA+B,WAA5B,0BAAwB,E,qBAE/BE,mBAAA,gCAAmC,EACnCF,mBAAA,CAyBM,OAzBNG,UAyBM,GAxBJH,mBAAA,CAuBQ,SAvBRI,UAuBQ,G,0BAtBNJ,mBAAA,CASQ,gBARNA,mBAAA,CAOK,aANHA,mBAAA,CAAoB,YAAhB,aAAW,GACfA,mBAAA,CAAa,YAAT,MAAI,GACRA,mBAAA,CAAc,YAAV,OAAK,GACTA,mBAAA,CAA6C;IAAzCJ,KAAK,EAAC;EAAa,GAAC,kBAAgB,GACxCI,mBAAA,CAAe,YAAX,QAAM,GACVA,mBAAA,CAAgB,YAAZ,SAAO,E,uBAGfA,mBAAA,CAWQ,iB,kBAVNK,mBAAA,CASKC,SAAA,QAAAC,WAAA,CATkBR,MAAA,CAAAS,WAAW,EAAvBC,QAAQ;yBAAnBJ,mBAAA,CASK;MATgCK,GAAG,EAAED,QAAQ,CAACE;QACjDX,mBAAA,CAAkD,MAAlDY,UAAkD,EAAAC,gBAAA,CAA3BJ,QAAQ,CAACE,UAAU,kBAC1CX,mBAAA,CAA8C,MAA9Cc,UAA8C,EAAAD,gBAAA,CAArBJ,QAAQ,CAACM,IAAI,kBACtCf,mBAAA,CAAsD,MAAtDgB,UAAsD,EAAAH,gBAAA,CAA5BJ,QAAQ,CAACQ,WAAW,kBAC9CjB,mBAAA,CAA8E,MAA9EkB,UAA8E,EAAAL,gBAAA,CAAhCJ,QAAQ,CAACU,eAAe,kBACtEnB,mBAAA,CAAwD,MAAxDoB,UAAwD,EAAhC,GAAC,GAAAP,gBAAA,CAAGJ,QAAQ,CAACY,WAAW,kBAChDrB,mBAAA,CAEK,MAFLsB,UAEK,GADHtB,mBAAA,CAAoD;MAA3CuB,OAAK,EAAAC,MAAA,IAAEzB,MAAA,CAAA0B,WAAW,CAAChB,QAAQ;OAAG,MAAI,iBAAAiB,WAAA,E;wCAO1C3B,MAAA,CAAA4B,gBAAgB,I,cAA3BtB,mBAAA,CAEM,OAFNuB,WAEM,GADJ9B,YAAA,CAAwCC,MAAA;IAA9BU,QAAQ,EAAEV,MAAA,CAAA4B;EAAgB,sC,gEAGxC7B,YAAA,CAAUC,MAAA,Y","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}